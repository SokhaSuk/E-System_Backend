# Auth Service Environment Variables
NODE_ENV=development
PORT=4001

# MongoDB Atlas Connection
# IMPORTANT: Replace <username>, <password>, and <cluster-url> with your actual MongoDB Atlas credentials
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/e_system_auth?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_SIGNUP_CODE=admin123
