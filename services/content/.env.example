# Content Service Environment Variables
NODE_ENV=development
PORT=4006

# MongoDB Atlas Connection
# IMPORTANT: Replace <username>, <password>, and <cluster-url> with your actual MongoDB Atlas credentials
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/e_system_content?retryWrites=true&w=majority

# Service URLs
COURSE_SERVICE_URL=http://localhost:4003
USER_SERVICE_URL=http://localhost:4002

# Gemini API (for AI features)
GEMINI_API_KEY=your-gemini-api-key-here
