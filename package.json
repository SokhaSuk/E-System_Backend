{
  "name": "e-system-microservices",
  "version": "1.0.0",
  "private": true,
  "description": "E-System Backend Microservices Architecture",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:course\" \"npm run dev:attendance\" \"npm run dev:grade\" \"npm run dev:content\"",
    "dev:gateway": "npm run dev --workspace=@e-system/api-gateway",
    "dev:auth": "npm run dev --workspace=@e-system/auth-service",
    "dev:user": "npm run dev --workspace=@e-system/user-service",
    "dev:course": "npm run dev --workspace=@e-system/course-service",
    "dev:attendance": "npm run dev --workspace=@e-system/attendance-service",
    "dev:grade": "npm run dev --workspace=@e-system/grade-service",
    "dev:content": "npm run dev --workspace=@e-system/content-service",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@e-system/shared",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "npm run typecheck --workspaces --if-present",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "clean": "rimraf dist node_modules packages/*/dist packages/*/node_modules services/*/dist services/*/node_modules",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.17.2",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
